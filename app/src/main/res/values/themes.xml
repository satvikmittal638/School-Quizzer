<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SchoolQuizzer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="loginInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginHorizontal" tools:targetApi="o">20dp</item>
        <item name="counterEnabled">true</item>
        <item name="startIconTint">@color/black</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperText">*Required</item>
        <item name="helperTextTextColor">@color/red</item>
    </style>

    <style name="tvDetails" parent="Widget.MaterialComponents.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>

    <style name="radio_option" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textSize">20sp</item>
        <item name="elevation">10dp</item>
        <item name="android:layout_marginTop">30dp</item>

    </style>
</resources>